<config_plugin>
    <config>
        <project>SampleProject</project>
        <finishedStepName>closed step</finishedStepName>
        <closeStepName>test step to close</closeStepName>
          
        <institution projectName="SampleProject">
            <link>http://ucei.it/centro-bibliografico/</link>
            <name>Centro Bibliografico</name>
        </institution>
        <institution projectName="Example">
            <link>http://example.com</link>
            <institution>Example library</institution>
        </institution>
    </config>


    <config>
        <!-- name of the project, can be repeated. Use * for any project -->
        <project>*</project>
        <!-- check if all proceses of the project have finished this task -->
        <finishedStepName></finishedStepName>
        <!-- close this step after the export was successful -->
        <closeStepName></closeStepName>
    </config>

</config_plugin>